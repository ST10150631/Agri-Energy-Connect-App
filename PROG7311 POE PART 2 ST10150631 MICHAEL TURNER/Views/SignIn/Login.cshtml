@model PROG7311_POE_PART_2_ST10150631_MICHAEL_TURNER.Models.UserModel
@{
    ViewData["Title"] = "LoginView";
}

<style>
    /* Center align the content */
    .centered-content {
        display: flex;
        justify-content: center;
        align-items: center;
        height:100vh;
        width: 180vh; /* Set height for vertical centering */
        background-image: url(/lib/imgs/pexels-pixabay-259280.jpg); /* Replace 'your-background-image-url.jpg' with your image URL */
        background-size: 100%,100%;
        background-position: center;
    }

    .card-container {
        width: 60%; /* Set a larger width for the card container */
        max-width: 500px; /* Set a maximum width */
        padding: 40px; /* Increase padding to maintain spacing */
    }

    /* Style for form inputs */
    .form-group {
        margin-bottom: 20px; /* Add margin between form elements */
    }
</style>
    @using (Html.BeginForm("LoginUser", "SignIn", FormMethod.Post))
    {
        <div class="centered-content">
            <div class="card-container card text-white bg-primary">
                <h1>Login</h1>
                <div class="form-group">
                    @Html.Label("Username")
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", id = "InputUsername" })
                </div>
                <div class="form-group">
                    @Html.Label("Password")
                    @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", id = "InputPassword", type = "password" })

                </div>
                <button type="submit" class="btn btn-success">Register</button>
            </div>

        </div>
    }


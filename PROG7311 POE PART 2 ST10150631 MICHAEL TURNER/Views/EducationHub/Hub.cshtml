@model IEnumerable<PROG7311_POE_PART_2_ST10150631_MICHAEL_TURNER.Models.CourseModel>
<style>
    .btn.btn-success {
        width: 100%; /* Make the button fill the container width */
        height: 100%;
        border: none; /* Remove button border */
        margin-bottom: 5px;
    }

    .album {
        padding-top: 100px; /* Increase the top padding */
        padding-bottom: 100px; /* Increase the bottom padding */
        padding-left: 50px;
        padding-right: 50px;
        background-size: cover;
    }
</style>
<head>
    <title>Green Energy Marketplace: </title>

</head>
<html>
<body>
    <h1 style="color:aliceblue">Educational Resources: </h1>
    
    <div class="album py-5 bg-primary" style="background-size:cover">
        <div class="container">
            <!-- Button to Add Course-->
            <a type="button" class="btn btn-success" style="background-size:cover" asp-controller="EducationHub" asp-action="AddEducationResource">+ Add Course</a>
                @if(Model!= null )
            {
                <div class="row">
                @foreach (var course in Model)
                {
                    
                        <div class="col-md-4">
                            <div class="card text-white bg-success mb-3" style="max-width: 30rem;">
                                <div class="card-header">
                                    <h3>Course Name: @course.Name</h3>
                                    <h4>Author: @course.Author</h4>
                                    @if (course.CourseImage != null)
                                    {
                                        <img class="card-img-top" src="data:image;base64,@(Convert.ToBase64String(course.CourseImage))" style="height: 200px; object-fit:contain;" />
                                    }
                                    <div class="card-body">
                                        <p class="card-text">Topic: @course.Topic</p>
                                        @if (course.CourseVideo != null && course.CourseVideo.Length > 0)
                                        {
                                            <video controls style="max-width: 100%; height: auto;">
                                                <source src="data:video/mp4;base64,@(Convert.ToBase64String(course.CourseVideo))" type="video/mp4" >
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                        <h5>Content:</h5>
                                        <p class="card-text">@course.Content</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    
                }
                </div>
            }
            
        </div>
    </div>


</body>
</html>

